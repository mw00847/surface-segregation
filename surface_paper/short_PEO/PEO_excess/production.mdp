title                    = Martini

integrator               = md
nsteps                   = 10000000        ; 500000 x 0.02 = 10 ns
dt                       = 0.02
nstcomm                  = 100

nstxout                  = 0
nstvout                  = 0
nstfout                  = 0
nstlog                   = 2000   ; written every 40 ps
nstenergy                = 2000   ; written every 40 ps
nstxout-compressed       = 2000   ; written every 40 ps
compressed-x-precision   = 100

cutoff-scheme            = Verlet
nstlist                  = 20
ns_type                  = grid
pbc                      = xyz
verlet-buffer-tolerance  = 0.005

coulombtype              = cutoff ; PME
pme_order                = 4         ; cubic interpolation
fourierspacing           = 0.12      ; grid spacing for FFT
rcoulomb                 = 1.2
epsilon_r                = 2.5  ; 15 (without polarizable water)
rvdw                     = 1.2

tcoupl                   = v-rescale
tc-grps                  = System
tau_t                    = 2.0
ref_t                    = 300
Pcoupl                   = parrinello-rahman
Pcoupltype               = isotropic
tau_p                    = 16.0 ; parrinello-rahman is more stable with larger tau-p, DdJ, 20130422
compressibility          = 6e-4 ;  4.5e-4
ref_p                    = 1.0  ; 1.0

gen_vel                  = no
gen_temp                 = 300
gen_seed                 = 666

constraints              = none ; =none includes the explicit contraints in the topology
constraint_algorithm     = Lincs
lincs_iter               = 1             ; accuracy of LINCS
lincs_order              = 4             ; also related to accuracy
